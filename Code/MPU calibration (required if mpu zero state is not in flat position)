#include <Wire.h>
#include "MPU6050.h"

MPU6050 mpu;

int16_t ax, ay, az;
int16_t gx, gy, gz;

void setup() {
  Serial.begin(115200);
  Wire.begin();
  mpu.initialize();

  if (!mpu.testConnection()) {
    Serial.println("MPU6050 connection FAILED");
    while (1);
  }

  Serial.println("MPU6050 READY");
}

void loop() {
  mpu.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);

  float axg = ax / 16384.0;
  float ayg = ay / 16384.0;
  float azg = az / 16384.0;

  float gxds = gx / 131.0;
  float gyds = gy / 131.0;
  float gzds = gz / 131.0;

  // Simple tilt angle (change axes if needed)
  float angle = atan2(axg, ayg) * 180.0 / PI;

  Serial.print("axg: "); Serial.print(axg, 2);
  Serial.print(" ayg: "); Serial.print(ayg, 2);
  Serial.print(" azg: "); Serial.print(azg, 2);
  Serial.print(" | gx: "); Serial.print(gxds, 2);
  Serial.print(" gy: "); Serial.print(gyds, 2);
  Serial.print(" gz: "); Serial.print(gzds, 2);
  Serial.print(" | Angle(acc): ");
  Serial.println(angle);

  delay(100);
}
